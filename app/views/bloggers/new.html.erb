<h1>Bloggers#new</h1>
<p>Find me in app/views/bloggers/new.html.erb</p>

<% if flash[:my_errors] %>
<ul>
 <% flash[:my_errors].each do |error|%>
  <li><%= error %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @blogger do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :age %>
  <%= f.number_field :age %><br>

  <%= f.label :bio %>
  <%= f.text_area :bio %><br>

  <%= f.submit %>
<% end %>