<h1>Posts#new</h1>

<%= form_for @post do |f| %>
<%= f.label :title %> <br>
<%= f.text_field :title %> <br>

<%= f.label :content %> <br>
<%= f.text_area :content %> <br>

<%= f.label :blogger_id %> <br>
<%= f.collection_select :blogger_id, @bloggers, :id, :name %> <br>

<%= f.label :destination_id %> <br>
<%= f.collection_select :destination_id, @destinations, :id, :name %> <br>

<%= f.hidden_field :likes, value: @post.likes %><br>

<%= f.submit %>
<% end %>